extends layout

block content

  div(style="padding-top:5px;display:flex;flex-direction:row")
    img(src="images/morningoogle.png" style="vertical-align:middle;padding-right:30px;padding-bottom:5px")
    p Mash-up using AWS CodePipeline/CodeBuild & Chrome Puppeteer
    md-datepicker(ng-model="playDate" md-placeholder="Enter date" ng-change="updateDate()")

  div(class="container")
    video(controls)
      source(type="video/mp4")
      source(type="video/ogg")
      |Your browser does not support the video tag.
    div(class="overlay")
  footer
    p Source code available at #[a(href="https://github.com/kmcintyre/morningoogle.com") Github]

  include material.html
